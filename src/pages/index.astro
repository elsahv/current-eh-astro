---
import About from "../components/sections/About.astro";
import Contact from "../components/sections/Contact.astro";
import SiteCard from "../components/SiteCard.astro";
import MainLayout from "../layouts/MainLayout.astro";

const allFeaturedSites = await Astro.glob("./websites/*.md");
---

<MainLayout>
  <div id="flex" class="flex bg-munsell">
    <!-- LEFT SIDE v-->
    <div id="left-side" class="bg-test1 w-2/5">
      <!-- *: HEADER -->
      <header>
        <nav>
          <div id="logo" class="text-5xl">Elsa Hovey</div>
          <ul>
            <li>about</li>
            <li>services</li>
            <li>contact</li>
          </ul>
        </nav>
      </header>
      <!-- *: HEADER  -->
      <!--  -->
      <!--  -->
      <!--  -->
      <!-- TODO:  about section -->
      <!-- TODO:  services section -->
      <!-- TODO:  contact section -->
    </div>
    <!-- LEFT SIDE ^-->
    <!--!  -->
    <!-- ! -->
    <!--  !-->
    <!--!  -->
    <!-- ! -->
    <!--  !-->
    <!-- RIGHT SIDE v-->
    <div id="right-side" class="w-3/5">
      <About />
      <div id="featured-websites" class="bg-test2 px-5">
        <div id="websites-container" class="mt-1 pt-1">
          <div id="websites-grid" class="mt-5 pt-5 grid grid-cols-2 gap-14">
            {
              allFeaturedSites.map((work) => (
                <SiteCard
                  title={work.frontmatter.title}
                  image={work.frontmatter.image.url}
                  alt={work.frontmatter.image.alt}
                  url={work.url}
                  testItem1={work.frontmatter.testItem1}
                  websiteNumber={work.frontmatter.websiteNumber}
                />
              ))
            }
          </div>
        </div>
      </div>

      <Contact />
      <!-- RIGHT SIDE ^-->
    </div>
  </div>
</MainLayout>
