---
import MainLayout from "../layouts/MainLayout.astro";
import BackBtn from "../components/ui/BackBtn.astro";
import WebsitesGrid from "../components/lc-tests/WebsitesGrid.astro";
import AboutLC from "../components/sections/AboutLC.astro";
---

<MainLayout>
  <div
    id="right-side-markdown-wrapper"
    class="flex justify-center bg-munsell text-aliceBlue border-l border-onyx md:h-screen h-full md:absolute relative right-0 md:w-3/5 overflow-y-scroll overflow-x-hidden 2xl:p-5 md:p-3 2xl:ml-[50px] 2xl:pl-[50px] bg-"
  >
    <div
      id="right-side-markdown-container"
      class="md:p-5 2xl:ml-[50px] 2xl:mr-[151px]"
    >
      <BackBtn />
      <div id="" class="bg- pl-2 pt-2 pr-1">
        <h1
          id="laughing-coyote-dev"
          class="pl-1 2xl:text-4xl text-3xl font-semibold"
        >
          Featured Website
        </h1>

        <a
          href="https://laughingcoyote.dev"
          target="_blank"
          rel="noopener noreferrer"
          href="/featured-work"
        >
          <img
            src="https://dl.dropboxusercontent.com/scl/fi/36vnm2e663uln6akmex4d/lc.png?rlkey=lgim54nbp0u11mviylee29hyj&st=1nuybim1&dl=0"
            alt=""
            class="border border-gray-300 my-2 mt-5"
          />
        </a>
      </div>
      <AboutLC />
      <WebsitesGrid />
    </div>
  </div>
</MainLayout>
+
