---
import TestMarkdownHeader from "../components/tests/TestMarkdownHeader.astro";
import MainLayout from "./MainLayout.astro";

const { frontmatter } = Astro.props;
---

<MainLayout>
  <TestMarkdownHeader />
  <div class="">
    <div id="markdown-post" class="text-lg p-5">
      <div
        id="right-side-markdown-container"
        class="text- border-l border-onyx h-screen md:absolute relative right-0 md:w-4/5 w-full overflow-y-scroll overflow-x-hidden p-5"
      >
        <section class="p-5 mx-5">
          <img
            src={frontmatter.image.url}
            alt=""
            class="drop-shadow-md border border-gray-300 rounded mt-3"
          />

          <div
            id="website-content"
            class="pl-[50px] pt-4 bg-test dropshadow-3xl"
          >
            <h2 class="text-4xl font-semibold">
              {frontmatter.title}
            </h2>

            <div class="bg- pt-2 opacity-80 text-lg">
              {frontmatter.testItem1}
              <slot />
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>
</MainLayout>
