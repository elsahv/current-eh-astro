---
import { Image } from "astro:assets";
import ProfilePic from "../../public/eh-img.jpg";
import SmIcons from "../components/SmIcons.jsx";
import MainLayout from "./MainLayout.astro";

const { frontmatter } = Astro.props;
---

<MainLayout>
  <div id="markdown-post" class="text-lg p-5">
    <section class="bg-">
      <div id="flex" class="grid grid-cols-2 mt-5 2xl:p-5 dropshadow-3xl">
        <h2 class="text-xl font-semibold">
          {frontmatter.title}
        </h2>

        <p class="pt-1 opacity-80 text-lg">{frontmatter.testItem1}</p>
        <img
          src={frontmatter.image.url}
          alt=""
          class="drop-shadow-md border border-gray-300 rounded mt-3"
        />
      </div>
      <div
        id="container"
        class="text-onyx lg:p-[55px] md:p-5 pt-3 p-1 px-1 md:ml-5"
      >
        <slot />
      </div>
    </section>
  </div>
</MainLayout>
