---
import BackBtn from "../components/ui/BackBtn.astro";
import MainLayout from "./MainLayout.astro";
const { frontmatter } = Astro.props;
---

<MainLayout>
  <div id="markdown-post" class="text-lg 2xl:p-5">
    <div
      id="right-side-markdown-container"
      class="bg-rosyBrown text-white border-l border-onyx h-screen md:absolute relative right-0 md:w-3/5 w-full overflow-y-scroll overflow-x-hidden 2xl:p-5 md:p-3"
    >
      <section class="2xl:p-5 p-2 md:mx-5 mx-1">
        <BackBtn />
        <div id="bg-test1" class="flex flex-col-reverse">
          <img
            src={frontmatter.image.url}
            alt=""
            class="w-[1100px] drop-shadow-md border border-gray-300 rounded mt-3"
          />
          <div class="mt-5 pt-5 2xl:pl-4">
            <h1 class="text-4xl">{frontmatter.title}</h1>
            <p class="pt-1 pr-2 md:pl-1 text-lg">
              {frontmatter.testItem1}
            </p>
          </div>
        </div>
        <div
          id="website-content"
          class="space-y-4 pl-3 2xl:w-3/4 pt-4 dropshadow-3xl"
        >
          <div class="bg- my-5 py-5 pt-2 opacity-80 text-lg">
            <div class="py-5">
              <slot />
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>
</MainLayout>
