---
export interface Props {
  title: string;
  productDef: string;
  targetAudience: string;
  mainGoal: string;
  audienceMessage: string;
  keyFeatures: string;
}

const {
  title,
  productDef,
  targetAudience,
  mainGoal,
  audienceMessage,
  keyFeatures,
} = Astro.props as Props;
---

<div id="about-lc" class="bg- flex justify-center my-5 py-5 font-">
  <div id="New About-wrapper" class="pt-5 mt-5">
    <h2 class="pb-1 text-3xl font-semibold">{title}</h2>
    <div class="font- pl-1">
      <p class="">{productDef}</p>
      <p class="">{targetAudience}</p>
      <p class="">{mainGoal}</p>
      <p class="">{audienceMessage}</p>
      <p class="">{keyFeatures}</p>
    </div>
  </div>
</div>
