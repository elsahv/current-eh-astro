---
import Image from "astro/components/Image.astro";
import FileImg from "../images/file.png";

const frontmatter = Astro.props;
const { title, image, alt, url, testItem1 } = frontmatter;
---

<div id="sq" class="opacity-70 hover:opacity-100 py-5">
  <a href={url}>
    <div class="flex font-bold pt-1 pb-1 pl- pr-1 bg-">
      <Image src={FileImg} alt="" width={25} height={25} />
      <h3 class="pl-1">{title}-</h3>
    </div>

    <img src={image} class="drop-shadow-xl border border-gray-300" alt={alt} />
  </a>
  <div class="text-carribean pl-2 pt-1 flex">
    - {testItem1}
  </div>
</div>
